<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calculator.HistoryController">
    <Label text = "History" style = "-fx-font-size:16;" />
    <TextArea fx:id = "historyTextArea" editable = "false" wrapText = "true" prefHeight="300" prefWidth="400" />
    <Button text = "Clear History" onAction = "#handleClearHistory" />

    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
